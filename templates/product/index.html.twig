{% extends 'base.html.twig' %}

{% block title %}Nos Produits - La Boutique Française{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            {# <h3>Filtrer</h3> Ancien filtre
            {{form(form)}} #}
            <form id="filters">
                {% for categorie in categories %}
                    <p><input type="checkbox" name="categories[]" id="cat{{categorie.id}}" value="{{categorie.id}}">
                    <label for="cat{{categorie.id}}">{{categorie.name}}</label></p>
                {% endfor %}    
            </form>
        </div>
        <div class="col-md-9">
        <h3>Nos Produits</h3>
            <div class="row product-container">
                {% for product in products %}
                    <div class="col-md-4 mt-3 mb-3" >
                        <div class="product-item text-center">
                            <a href="{{ path('product',{'slug':product.slug })}}"><img class="img-fluid" src="/uploads/{{product.illustration}}" alt="image du produit"></a>
                            <h5>{{product.name}}</h5>
                            <span class="product-subtitle">{{product.subtitle}}</span>
                            <span class="product-price">{{(product.price / 100)|number_format(2, ',','.') }}€</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}

{% block script %}
    <script src="{{asset('assets/js/filters.js')}}"></script>
{% endblock %}